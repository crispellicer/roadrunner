<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.widget.Button
        android:id="@+id/races_list_button"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/entrenamiento_fuerza_corredores"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Races"
        android:textColor="#0B0000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/registrations_list_button"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/calendario"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="My Registrations"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/races_list_button" />

    <android.widget.Button
        android:id="@+id/fav_races_list_button"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/medallas"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Favourites"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrations_list_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="414dp"
        android:layout_height="221dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/entrenamiento_maraton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fav_races_list_button" />

</androidx.constraintlayout.widget.ConstraintLayout>