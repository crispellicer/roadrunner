<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020209"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="780dp"
            app:srcCompat="@drawable/zapatillas03" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <Button
            android:id="@+id/races_list_button"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECD0FE"
            android:gravity="center"
            android:text="RACES"
            android:textColor="#5C1349"
            app:icon="@android:drawable/ic_menu_month"
            app:iconTint="#5C1349" />

        <Button
            android:id="@+id/registrations_list_button"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECD0FE"
            android:gravity="center"
            android:text="MY REGISTRATIONS"
            android:textColor="#5C1349"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconTint="#5C1349" />

        <Button
            android:id="@+id/fav_races_list_button"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECD0FE"
            android:gravity="center"
            android:text="FAVOURITES"
            android:textColor="#5C1349"
            app:icon="@android:drawable/star_off"
            app:iconTint="#5C1349" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>